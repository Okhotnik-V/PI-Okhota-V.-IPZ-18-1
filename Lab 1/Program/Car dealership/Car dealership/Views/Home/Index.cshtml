@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h3>Автомагазин</h3>
    <table>
        <tr>
            <td><p>Модель</p></td>
            <td><p>Марка</p></td>
            <td><p>Цiна</p></td>
            <td></td>
        </tr>
        @foreach (var b in ViewBag.Cars)
        {
            <tr>
                <td><p>@b.Name</p></td>
                <td><p>@b.Brand</p></td>
                <td><p>@b.Price</p></td>
                <td><p><a href="/Home/Buy/@b.Id">Купити</a></p></td>
            </tr>
}
    </table>
</div>